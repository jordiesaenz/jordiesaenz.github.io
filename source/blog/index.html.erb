---

title: Jordie Saenz | Blog
pageable: true

---

<h1 class="page-title"><a href="/blog">BLOG</a></h1>

<div class="blog-listing">
  <% blog.articles[0...10].each do |article| %>
    <a class="blog-card-link" href="<%= article.url %>">
      <div class="blog-card">
        <time class="date"><%= article.date.strftime('%x') %></time>
        <div class="grid">
          <div class="col-xl-1-6 col-md-1-4 col-sm-1-3">
            <img class="poster-image" src="<%= article.data.image %>">
          </div>
          <div class="col-xl-5-6 col-md-3-4 col-sm-2-3">
            <h2 class="post-title"><%= article.title %></h2>
            <div class="post-body">
              <%= article.data.summary %>
            </div>
          </div>
        </div>
      </div>
    </a>
  <% end %>
</div>
